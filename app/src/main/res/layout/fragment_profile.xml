<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/nbNavHom"
            android:layout_width="match_parent"
            android:layout_height="56dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="161dp"
            app:menu="@menu/nav_profile_items"></android.support.design.widget.BottomNavigationView>

        <Button
            android:id="@+id/btnEditPro"
            android:layout_width="154dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="47dp"
            android:layout_marginTop="70dp"
            android:text="Edit Profile" />

        <TextView
            android:id="@+id/tvFollowersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginEnd="108dp"
            android:text="5,897"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="20dp"
            android:text="134"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvNumPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvNumPos"
            android:layout_alignTop="@+id/tvFollowersCount"
            android:text="35"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvNumPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvFollowersCount"
            android:layout_marginStart="161dp"
            android:text="posts" />

        <TextView
            android:id="@+id/tvFolCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvFollowersCount"
            android:layout_below="@+id/tvFollowersCount"
            android:text="Followers " />

        <TextView
            android:id="@+id/tvFolin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnEditPro"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-70dp"
            android:layout_marginEnd="23dp"
            android:text="Following" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tvFollowersCount"
            android:layout_marginStart="22dp"
            android:src="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView2"
            android:layout_centerVertical="true"
            android:text="Jessie"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/ibSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnEditPro"
            android:layout_marginStart="-47dp"
            android:layout_toEndOf="@+id/btnEditPro"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:src="@drawable/ic_settings" />

        <ImageButton
            android:id="@+id/ivLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView2"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_lock_power_off" />


    </RelativeLayout>



</FrameLayout>