<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="364dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="67dp" />


    <!--<ImageView-->
        <!--android:id="@+id/ivPicPost"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="350dp"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:src="@android:drawable/btn_star" />-->

    <com.parse.ParseImageView
        android:id="@+id/pivpost"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvUsername" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nbNavHom"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pivpost"
        app:menu="@menu/nav_home"></android.support.design.widget.BottomNavigationView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nbHom"
        android:layout_width="66dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/pivpost"
        app:menu="@menu/home_sav"></android.support.design.widget.BottomNavigationView>

    <TextView
        android:id="@+id/tvdescript"
        android:layout_width="364dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nbNavHom"
        android:layout_marginStart="20dp" />


</RelativeLayout>